<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @service.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dt><strong>Sub Services:</strong></dt>
  <dd><%= @service.cities.collect(&:name) %></dd>
  <% @service.sub_services.each do |sub_service| %>
    <dd><%= sub_service.name %></dd>
  <% end %>
</dl>

<%= link_to "create_sub_services", sub_services_admin_service_path(@service), :class => 'btn btn-default'  %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_services_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_service_path(@service), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              service_path(@service),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
