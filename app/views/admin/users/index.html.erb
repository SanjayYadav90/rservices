<div class="main-container">
  <div class="header-container">
    <div class="row">
      <div class="add-new">
      	<%= link_to t('.Back', :default => t("helpers.links.back")),
                    admin_root_path,
                    :class => 'btn btn-primary', style: "color:#fff" %>
        </div>
      <div class="top-title">
        <h1>Users</h1>
        
      </div>
      <div class="col-md-xl col-md-offset-10">
        <div class="add-new">
            <%= link_to t('.New', :default => t("helpers.links.new")),
                    new_admin_user_path,
                    :class => 'btn btn-primary', style: "color:#fff" %>
        </div>
      </div>
    </div>
          <hr>
  </div>  

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= get_full_name(user) %></td>
          <td><%=users_city(user) %></td>
          <td><%=l user.created_at %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        admin_user_path(user), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        admin_service_path(user),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger', style: "color:#fff" %>
            <%= link_to "Service requests", user_service_request_admin_user_path(user),  :class => 'btn btn-default btn-xs'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>