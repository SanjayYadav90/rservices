<div class="panel-heading">
  <h3>Fill Your PortFolio Details</h3>
 </div>
  <div class="panel-body">
    <%= form_for @portfolio, url: partner_portfolio_path, html: { multipart: true, :class => 'form-horizontal' } do |form| %>
      
      <div class="form-group">
        <%= form.label :gender, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= form.select(:gender, [["Male", 2], ["Female", 3]], { :prompt => "Select Gender"}, required: 'true', class: 'form-control form_input') %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :experience, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= form.number_field :experience, class: 'form-control form_input', required: 'true' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :education, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= form.text_field :education, class: 'form-control form_input', required: 'true' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :about, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= form.text_area :about, class: 'form-control text_area', required: 'true' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :city, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= select_city_services(@cities, form) %>
        </div>
      </div>

      <div class="form-group" id="show_services"></div>


      <div class="field">
        <%= form.label :avatar, " Profile Image", class: 'control-label col-sm-2' %>
        <div class="col-sm-10"> 
          <%= form.file_field :avatar %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit "Update", :class=> 'btn btn-primary w3l_header_right' %>
      </div>
    <% end %>
  </div>
</div>  
