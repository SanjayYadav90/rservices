<div class="panel-heading">
  <h3>Fill Your PortFolio Details</h3>
 </div>
  <div class="panel-body">
    <%= form_for @portfolio, url: partner_portfolio_path, html: { multipart: true } do |form| %>
      <div class="field">
        <%= form.label :gender %>
        <%= form.select :gender, [ ["Male", 2], ["Female", 3]], class: 'form-control'%>
      </div>
      <div class="field">
        <%= form.label :about %>
        <%= form.text_field :about %>
      </div>
      <div class="field">
        <%= form.label :experience %>
        <%= form.text_field :experience %>
      </div>
      <div class="field">
        <%= form.label :education %>
        <%= form.text_field :education %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%=form.select :city_id,options_from_collection_for_select(@cities, :id, :name), :prompt => "Select City", class: 'form-control'%>
      </div>

      <div class="field">
        <%= form.label :service %>
          <%=form.select :service_id ,options_from_collection_for_select(@services, :id, :name), :prompt => "Select Service", class: 'form-control'%>
      </div>

      <div class="field">
        <%= form.label :avatar, " Profile Image" %>
        <%# if @portfolio.avatar.present? %>
          <%#= image_tag @portfolio.avatar.url(:thumb) %><br/>
        <%# end %>
         <%= form.file_field :avatar %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>  
