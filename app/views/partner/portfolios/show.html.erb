<hr>
<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Your PortFolio Details</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-3">
          <div>
            <!-- <div class="panel-heading no-title"> </div> -->
            <div>
              <div class="info_detail_left"><%= image_tag(@portfolio.avatar.url) %></div>
              <div class="info_detail_left">
                <table class="table table-striped table-hover">
                  <tbody>
                    <tr>
                      <h4 class="text-center"><%= @portfolio.user.try(:first_name) %></h2>
                    </tr>
                    <tr>
                      <td class="wd-60">Gender</td>
                      <td><%= @portfolio.gender %></td>
                    </tr>
                    <tr>
                      <td class="wd-60">Status</td>
                      <td><span class="label label-success">Active</span></td>
                    </tr>
                    <tr>
                      <td>User Rating</td>
                      <td><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i></td>
                    </tr>
                    <tr>
                      <td>Member Since</td>
                      <td><%= @portfolio.user.created_at.strftime('%v') %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <div class="col-sm-9">
          <div>
            <div class="info_detail_right ht_18">
              <h3 class="text-center">About</h3>
              <div class="margin_10"><%= @portfolio.about %></div>
            </div>
            <div class="info_detail_right ht_48">
              <h3 class="text-center">Photos</h3>
              <%= @portfolio.about %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>