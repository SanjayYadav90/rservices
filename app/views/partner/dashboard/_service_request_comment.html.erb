<div class="modal fade" id="comment" role="dialog">
   <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
         <div class="modal-header pop_head">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Your Comment</h4>
         </div>
         <form action="/create_comment" id="comment_form" method="post">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= hidden_field_tag :id, @request_id %>
            <%= hidden_field_tag :comment_popup, 'true' %>
            <%= hidden_field_tag :value, @value %>
            <div class="section_drop2">
               <div class="modal-body select-container">
                  <%= select_tag "service_request[select_comment]", options_for_select(@comments, "Select Comment"), class: "form-control" %>
               </div>
            </div>
            <div class="comment-container" id="comment-field" style='display:none;'>
               <h5>Description</h5>
               <input type="text" name="service_request[comment]" class="form-control" placeholder="Type here...">
               <label for="service_request[comment]" class="error error-title"></label>
            </div>
            <button type="submit" class="btn btn-default save-comment">Save</button>
         </form>
         <div class="modal-footer footer-border">
            
         </div>
      </div>
   </div>
</div>
