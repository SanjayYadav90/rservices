<%= form_for @address do |f| %>
 <div class="form-group">
    <%= f.label :flat_number, "Flat Number/H.No." %>
    <%= f.text_field :flat_number %>
  </div>

  <div class="form-group">
    <%= f.label :street_name %>
    <%= f.text_field :street_name %>
  </div>

   <div class="form-group">
    <%= f.label :pin_code %>
    <%= f.text_field :pin_code %>
  </div>

  <div class="form-group">
    <%= f.label :landmark %>
    <%= f.text_field :landmark %>
  </div>

	<div class="form-group">
  	<div class="col-xs-12">
  		<div class ="col-xs-3">
    		<%= f.label :country %>
    		<%= select_tag :country_selection, options_from_collection_for_select(Country.all, :id, :name), :prompt => "--- Select Services---" , data: {remote: true,url: get_states_and_cities_addresses_path,method: 'get'} %>
  		</div>
  		<div class ="col-xs-3" id="state_selection"></div>
  		<div class ="col-xs-3" id="city_selection"></div>
  	</div>
	</div>  
	

<div class="form-group">
	<%=f.submit %>
</div>

<% end %>